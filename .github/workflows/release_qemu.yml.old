name: Release CLI Tool

on:
  push:
    tags:
      - 't*.*.*'

permissions:
  contents: write

jobs:
  build-linux-qemu:
    runs-on: ubuntu-latest

    steps:
      - name: âœ Checkout repository
        uses: actions/checkout@v4

      - name: ğŸ›  Set up Docker and build for ARM Linux
        run: |
          sudo apt update
          sudo apt install -y qemu binfmt-support qemu-user-static

          # QEMU ã‚’ Docker ã«ç™»éŒ²
          docker run --rm --privileged multiarch/qemu-user-static --reset -p yes

          # ARM64 ã‚³ãƒ³ãƒ†ãƒŠã‚’èµ·å‹•ã—ã¦ãƒ“ãƒ«ãƒ‰å‡¦ç†ã‚’å®Ÿè¡Œ
          docker run --rm -v ${{ github.workspace }}:/workspace arm64v8/debian:bookworm sh -c "
          apt update && apt install -y libasound2-dev &&
          curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y &&
          source \$HOME/.cargo/env &&
          cd /workspace &&
          \$HOME/.cargo/bin/cargo build --release
          "

      - name: ğŸš› Move the binary
        run: |
          mkdir -p dist
          cp target/release/rtyping dist/rtyping-aarch64-unknown-linux-gnu

      - name: ğŸ†™ Upload to Release
        uses: softprops/action-gh-release@v1
        with:
          files: |
            dist/rtyping-aarch64-unknown-linux-gnu
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}

  build-linux:
    runs-on: ubuntu-latest

    steps:
      - name: âœ Checkout repository
        uses: actions/checkout@v4

      - name: ğŸ¦€ Set up Rust
        uses: dtolnay/rust-toolchain@stable
        with:
          toolchain: stable

      - name: ğŸ“¦ Install cross-compilation dependencies
        run: |
          sudo apt-get update
          sudo apt-get install -y \
            gcc-aarch64-linux-gnu \
            g++-aarch64-linux-gnu \
            libc6-dev-arm64-cross \
            binutils-aarch64-linux-gnu \
            autoconf \
            automake \
            libtool \
            pkg-config \
            libasound2-dev

      - name: ğŸ›  Build ALSA library for aarch64
        run: |
          git clone https://github.com/alsa-project/alsa-lib.git
          cd alsa-lib
          ./configure --host=aarch64-linux-gnu --prefix=/tmp/alsa
          make
          sudo make install

      - name: ğŸ›  Build project for aarch64
        run: |
          rustup target add aarch64-unknown-linux-gnu
          cargo build --release --target aarch64-unknown-linux-gnu

      - name: ğŸš› Move the binary
        run: |
          mkdir -p dist
          cp target/aarch64-unknown-linux-gnu/release/rtyping dist/rtyping-aarch64-unknown-linux-gnu

      - name: ğŸ†™ Upload to Release
        uses: softprops/action-gh-release@v1
        with:
          files: |
            dist/rtyping-aarch64-unknown-linux-gnu
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
